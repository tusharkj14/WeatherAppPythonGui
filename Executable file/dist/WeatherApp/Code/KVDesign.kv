#: import utils kivy.utils
<MyLayout>

    city: city
   
    FloatLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: 20
        
        GridLayout :
            cols: 2
            spacing: 10
            padding: 10
            size_hint: 1, None
            height: 50            
            pos_hint: {'x': 0, 'top':0.95}
            Label:
                id: name_city
                text: "Name of City"
                font_size: 20
                background_color: (0,0,0, 1)
                canvas.before:
                    Color: 
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
                # color: (201/255, 171/255, 163/255, 1)
                color: (1,1,1,1)


            TextInput:
                id: city
                focus: True
                base_direction: None
                on_text_validate: True
                multiline: False
                # background_color: utils.get_color_from_hex('#d9ebd1 #718089')

        Label:
            id: temp_city
            text: ""
            pos_hint: {'x':-0.20, 'y':0.00}
            color: (0,0,0,1)

        RoundedButton:
            text: "Submit"
            font_size : 32
            on_press: root.press()
            size_hint: 0.25, None
            width: 30
            height: 30
            pos_hint: {'x':.60, 'top':0.70}
            # background_normal: ''
            # background_color: 0, 0, 1, 1
            # background_color: utils.get_color_from_hex('#ace6e8')


<RoundedButton@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (48/255, 84/255, 150/255, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [25]